@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home";
}

    <div class="row">
        <div class="col s6 m3">
            <div class="card">
                <div class="card-content light-green">
                    <span class="card-title">Geeks</span>
                    <ul id="geekList" class="collection"></ul>
                </div>
            </div>
        </div>

        <div class="col s6 m3">
            <div class="card">
                <div class="card-content blue-grey">
                    <span class="card-title">Skills</span>
                    <button class="btn waves-effect waves-light" id="btnClearFilter">
                        Clear Filter
                        <i class="material-icons right">clear</i>
                    </button>
                    <ul id="skillList" class="collection"></ul>
                </div>
            </div>
        </div>

        <div class="col s6 m3">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Add User</span>
                    <form id="frmUser">
                        <div class="row">
                            <div class="input-field col s6">
                                <input id="first_name" type="text" class="validate" required="" aria-required="true">
                                <label for="first_name">First Name</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="last_name" type="text" class="validate" required="" aria-required="true">
                                <label for="last_name">Last Name</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <select multiple id="selSkills" >
                                </select>
                                <label>Select Skills:<span class="select-validate"></span></label>
                            </div>
                        </div>
                        <button class="btn waves-effect waves-light" type="submit">
                            Create
                            <i class="material-icons right">add</i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        
    </div>




